@model List<TarefaModel>
@{
    ViewData["Title"] = "Listagem de Tarefas";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-short">
        <a class="btn btn-primary" role="button" asp-controller="Tarefas" asp-action="Criar">Adicionar Tarefa</a>
    </div>
    
    <br />

    <h1 class="display-4">Listagem de Tarefas</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Título da tarefa</th>
                <th scope="col">Descrição da tarefa </th>
                <th scope="col">Data</th>
                <th scope="col">Hora inicio</th>
                <th scope="col">Hora fim</th>
                <th scope="col">Prioridade</th>
                <th scope="col">Tarefa finalizada?</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var tarefa in Model)
                {
                    <tr>
                        <td>@tarefa.Titulo  </td>
                        <td>@tarefa.Descricao</td>
                        <td>@tarefa.Data</td>
                        <td>@tarefa.Inicio</td>
                        <td>@tarefa.Fim</td>
                        <td>@tarefa.Prioridade</td>
                        <td>@tarefa.Finalizada</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@tarefa.Id" asp-controller="Tarefas" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@tarefa.Id" asp-controller="Tarefas" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {           <tr><td >Nenhuma Tarefa encontrada</td></tr>            }
        </tbody>
    </table>
</div>
